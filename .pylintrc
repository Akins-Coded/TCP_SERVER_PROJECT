[MASTER]
ignore=migrations, __pycache__
jobs=1
load-plugins=pylint.extensions.typing, pylint.extensions.docparams

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    duplicate-code,
    line-too-long,
    fixme

[FORMAT]
max-line-length=100
indent-string='    '
expected-line-ending-format=LF

[TYPECHECK]
ignore-mixin-members=yes
ignore-on-opaque-inference=yes

[REPORTS]
output-format=colorized
reports=no
score=yes
